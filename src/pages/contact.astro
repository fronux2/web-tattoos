<form class="space-y-4" action="https://formspree.io/f/your-form-id" method="POST">
  <div>
    <label for="name" class="block text-sm font-medium text-stone-300 mb-1">Nombre</label>
    <input 
      type="text" 
      id="name" 
      name="name" 
      required
      class="w-full px-4 py-2 bg-stone-700 border border-stone-600 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent"
    >
  </div>

  <div>
    <label for="email" class="block text-sm font-medium text-stone-300 mb-1">Email</label>
    <input 
      type="email" 
      id="email" 
      name="email" 
      required
      class="w-full px-4 py-2 bg-stone-700 border border-stone-600 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent"
    >
  </div>

  <div>
    <label for="message" class="block text-sm font-medium text-stone-300 mb-1">Mensaje</label>
    <textarea 
      id="message" 
      name="message" 
      rows="4"
      required
      class="w-full px-4 py-2 bg-stone-700 border border-stone-600 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent"
    ></textarea>
  </div>

  <div>
    <label for="tipo" class="block text-sm font-medium text-stone-300 mb-1">Interesado en:</label>
    <select 
      id="tipo" 
      name="tipo"
      class="w-full px-4 py-2 bg-stone-700 border border-stone-600 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent"
    >
      <option value="consulta">Consulta general</option>
      <option value="presupuesto">Presupuesto de tatuaje</option>
      <option value="piercing">Servicio de piercing</option>
    </select>
  </div>

  <button 
    type="submit"
    class="w-full bg-amber-600 hover:bg-amber-700 text-white font-medium py-2 px-4 rounded-lg transition mt-4"
  >
    Enviar mensaje
  </button>
</form>